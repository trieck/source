<?xml version="1.0" encoding="UTF-8"?>
<project name="java" default="all">


    <property file="java.properties"/>
    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
   <property name="skip.tests" value="true"/>
    -->

    <!-- Compiler options -->

    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value=""/>
    <property name="compiler.max.memory" value="128m"/>
    <patternset id="ignored.files">
        <exclude name="**/CVS/**"/>
        <exclude name="**/SCCS/**"/>
        <exclude name="**/RCS/**"/>
        <exclude name="**/rcs/**"/>
        <exclude name="**/.DS_Store/**"/>
        <exclude name="**/.svn/**"/>
        <exclude name="**/.pyc/**"/>
        <exclude name="**/.pyo/**"/>
        <exclude name="**/*.pyc/**"/>
        <exclude name="**/*.pyo/**"/>
        <exclude name="**/.git/**"/>
        <exclude name="**/*.hprof/**"/>
        <exclude name="**/_svn/**"/>
        <exclude name="**/.hg/**"/>
    </patternset>
    <patternset id="library.patterns">
        <include name="*.zip"/>
        <include name="*.war"/>
        <include name="*.egg"/>
        <include name="*.ear"/>
        <include name="*.swc"/>
        <include name="*.jar"/>
    </patternset>
    <patternset id="compiler.resources">
        <include name="**/?*.properties"/>
        <include name="**/?*.xml"/>
        <include name="**/?*.html"/>
        <include name="**/?*.gif"/>
        <include name="**/?*.png"/>
        <include name="**/?*.jpeg"/>
        <include name="**/?*.jpg"/>
    </patternset>

    <!-- JDK definitions -->

    <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
    <path id="jdk.classpath.1.6">
        <fileset dir="${jdk.home.1.6}">
            <include name="jre/lib/alt-rt.jar"/>
            <include name="jre/lib/charsets.jar"/>
            <include name="jre/lib/deploy.jar"/>
            <include name="jre/lib/javaws.jar"/>
            <include name="jre/lib/jce.jar"/>
            <include name="jre/lib/jsse.jar"/>
            <include name="jre/lib/management-agent.jar"/>
            <include name="jre/lib/plugin.jar"/>
            <include name="jre/lib/resources.jar"/>
            <include name="jre/lib/rt.jar"/>
            <include name="jre/lib/ext/dnsns.jar"/>
            <include name="jre/lib/ext/localedata.jar"/>
            <include name="jre/lib/ext/sunjce_provider.jar"/>
        </fileset>
    </path>

    <property name="project.jdk.home" value="${jdk.home.1.6}"/>
    <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
    <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>

    <!-- Modules -->


    <!-- Module java -->

    <dirname property="module.java.basedir" file="${ant.file}"/>


    <property name="module.jdk.home.java" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.java" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.java" value="${project.jdk.classpath}"/>

    <property name="compiler.args.java" value="${compiler.args}"/>

    <property name="java.output.dir" value="${module.java.basedir}/classes"/>
    <property name="java.testoutput.dir" value="${module.java.basedir}/classes"/>

    <path id="java.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="java.module.production.classpath">
        <path refid="${module.jdk.classpath.java}"/>
        <pathelement location="${basedir}/jars/msbase.jar"/>
        <pathelement location="${basedir}/jars/mssqlserver.jar"/>
        <pathelement location="${basedir}/jars/msutil.jar"/>
    </path>

    <path id="java.runtime.production.module.classpath">
        <pathelement location="${java.output.dir}"/>
        <pathelement location="${basedir}/jars/msbase.jar"/>
        <pathelement location="${basedir}/jars/mssqlserver.jar"/>
        <pathelement location="${basedir}/jars/msutil.jar"/>
    </path>

    <path id="java.module.classpath">
        <pathelement location="${java.output.dir}"/>
        <path refid="${module.jdk.classpath.java}"/>
        <pathelement location="${basedir}/jars/msbase.jar"/>
        <pathelement location="${basedir}/jars/mssqlserver.jar"/>
        <pathelement location="${basedir}/jars/msutil.jar"/>
    </path>

    <path id="java.runtime.module.classpath">
        <pathelement location="${java.output.dir}"/>
        <pathelement location="${basedir}/jars/msbase.jar"/>
        <pathelement location="${basedir}/jars/mssqlserver.jar"/>
        <pathelement location="${basedir}/jars/msutil.jar"/>
    </path>


    <patternset id="excluded.from.module.java">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.java">
        <patternset refid="excluded.from.module.java"/>
    </patternset>

    <path id="java.module.sourcepath">
        <dirset dir="${module.java.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.java" depends="compile.module.java.production,compile.module.java.tests"
            description="Compile module java"/>

    <target name="compile.module.java.production" description="Compile module java; production classes">
        <mkdir dir="${java.output.dir}"/>
        <javac destdir="${java.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}"
               memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.java}/javac">
            <compilerarg line="${compiler.args.java}"/>
            <bootclasspath refid="java.module.bootclasspath"/>
            <classpath refid="java.module.production.classpath"/>
            <src refid="java.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.java"/>
        </javac>

        <copy todir="${java.output.dir}">
            <fileset dir="${module.java.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.java.tests" depends="compile.module.java.production"
            description="compile module java; test classes" unless="skip.tests"/>

    <target name="clean.module.java" description="cleanup module">
        <delete dir="${java.output.dir}"/>
        <delete dir="${java.testoutput.dir}"/>
    </target>

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name="clean" depends="clean.module.java" description="cleanup all"/>

    <target name="build.modules" depends="init, clean, compile.module.java" description="build all modules"/>

    <target name="all" depends="build.modules" description="build all"/>
</project>